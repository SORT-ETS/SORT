<div class="row card">
	<div class="row">
		{{#if this.trash}}
		<div class="{{ this.itemDOMColumns }} columns trash">
			<div class="img-container">
				<img src="/images/trash.png">
			</div>
			<div class="amount">
				<p>{{ this.trash }}</p>
			</div>
		</div>
		{{/if}}
		{{#if this.compost}}
		<div class="{{ this.itemDOMColumns }} columns compost">
			<div class="img-container">
				<img src="/images/compost.png">
			</div>
			<div class="amount">
				<p>{{ this.compost }}</p>
			</div>
		</div>
		{{/if}}
		{{#if this.paper}}
		<div class="{{ this.itemDOMColumns }} columns paper">
			<div class="img-container">
				<img src="/images/paper.png">
			</div>
			<div class="amount">
				<p>{{ this.paper }}</p>
			</div>
		</div>
		{{/if}}
		{{#if this.recyclable}}
		<div class="{{ this.itemDOMColumns }} columns recyclable">
			<div class="img-container">
				<img src="/images/recyclable.png">
			</div>
			<div class="amount">
				<p>{{ this.recyclable }}</p>
			</div>
		</div>
		{{/if}}
	</div>
    {{#if this.warnings}}
	<div class="row warning">
	<h5>Attention : {{ this.warnings }}</h5>
	</div>
    {{/if}}
	<div class="row details">
		<p id="moreDetailsButton">Obtenir plus de détails</p>
	</div>
</div>
